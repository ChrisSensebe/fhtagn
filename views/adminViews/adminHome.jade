extends adminLayout

block content
    .container
        .row
            .col-md-12
                h2.page-header #{pageTitle}
        each post in posts
            .row
                .col-md-12
                    h3= post.title
                    p= "created : " + post.created
                    p= "updated : " + post.updated
                    p= "by : " + post.author
                    p= "tags : " + post.tags
                    p
                        a(href="admin/post/#{post.id}" class="btn btn-primary") Edit post
                    p
                        form(method="post" action="admin/delpost/#{post.id}")
                        button.btn.btn-danger Delete post
        .row
            .col-md-12
                p
                    a(href="admin/newPost") New post
