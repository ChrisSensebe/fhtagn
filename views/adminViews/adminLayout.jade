doctype html
html
    head
        title= title
        link(rel="stylesheet", href="/stylesheets/style.css")
        link(rel="stylesheet", href="//bootswatch.com/slate/bootstrap.min.css")
        link(rel="icon" href="public/favicon.ico")
        body
            nav(class="navbar navbar-default navbar-fixed")
                div(class="container")
                    div(class="navbar-header")
                        button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                            span(class="sr-only") Toggle navigation
                            span(class="icon-bar")
                            span(class="icon-bar")
                            span(class="icon-bar")
                        a(class="navbar-brand" href="/admin") Fhtagn | admin
                    div(class="collapse navbar-collapse")
                        ul(class="nav navbar-nav")
                            li
                                a(href="/admin") Home
                            li
                                a(href="/admin/post") New post
                            li
                                a(href="/admin/tags") Tags
                            li
                                a(href="/admin/users") Users
                            li
                                a(href="/admin/files") Files
                            li
                                a(href="/admin/theme") Theme
                        ul(class="nav navbar-nav navbar-right")
                            li(class="dropdown")
                                if !isAuthenticated
                                    a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") connection
                                        span(class="caret")
                                else
                                    a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") #{currentUser.username}
                                        span(class="caret")
                                ul(class="dropdown-menu")
                                    li
                                        a(href="/") Go to site
                                    if isAuthenticated
                                        li
                                            a(href="/admin/logout") Logout
                                        li
                                            a(href="/admin/user") Edit profile
                                    else
                                        li
                                            a(href="/admin/login") Login

            block content
            .container
                .row
                    .col-md-12
                        p(class="text-muted text-footer")= title
        script(src="//code.jquery.com/jquery-2.1.4.min.js")
        script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")